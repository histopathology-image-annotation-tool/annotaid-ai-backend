{
  "editor.rulers": [
    88
  ],
  "notebook.formatOnSave.enabled": true,
  "isort.args": [
    "--profile=wemake"
  ],
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "ms-python.autopep8",
  },
  "flake8.args": [
    "--max-line-length=88",
    "--extend-ignore=E203",
    "--exclude=.venv"
  ],
  "autopep8.args": [
    "--max-line-length",
    "88"
  ],
  "jupyter.notebookFileRoot": "${workspaceFolder}",
  "editor.defaultFormatter": "ms-python.autopep8"
}
